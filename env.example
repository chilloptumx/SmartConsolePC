# Database Configuration
POSTGRES_PASSWORD=healthcheck_dev
DATABASE_URL=postgresql://healthcheck:healthcheck_dev@postgres:5432/healthcheck

# Redis Configuration
REDIS_URL=redis://redis:6379

# Application
NODE_ENV=development
PORT=5001

# Frontend
# If ports 3001/5001 are already in use (e.g., by IDE port forwarding), you can override host ports:
# FRONTEND_HOST_PORT=3001
# BACKEND_HOST_PORT=5001
# If running via docker-compose, leaving this blank uses the frontend dev server proxy to `/api`.
# If running frontend outside Docker, set it to the backend host URL.
# Example for this repo's default docker-compose ports:
VITE_API_URL=http://localhost:5001

# SMTP Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=healthcheck@yourdomain.com

# Windows Machine Credentials
# These are used for PowerShell remoting (WinRM/SSH)
WINDOWS_ADMIN_USER=administrator
WINDOWS_ADMIN_PASSWORD=your-windows-password

# Windows Connection Settings
WINDOWS_CONNECTION_TIMEOUT=30000
WINDOWS_MAX_RETRIES=3

